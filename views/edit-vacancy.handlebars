<main class="contenedor">
    <form action="/vacancies/edit/{{ vacancy.url }}" method="POST" class="default-form">
        <h3>Informacion general</h3>
        <div class="campo">
            <label for=""> Titulo </label>
            <input type="text" name="title" placeholder="React" required value="{{ vacancy.title }}">
        </div>

        <div class="campo">
            <label for=""> Empresa </label>
            <input type="text" name="company" placeholder="Google" required value="{{vacancy.company}}">
        </div>

        <div class="campo">
            <label for=""> Ubicacion </label>
            <input type="text" name="place" placeholder="Paris" required value="{{vacancy.place}}">
        </div>

        <div class="campo">
            <label for=""> Salario (EUR) </label>
            <input type="text" name="salary" placeholder="20.000 â‚¬" required value="{{vacancy.salary}}">
        </div>

        <div class="campo">
            <label for="">Contrato</label>
            <select name="contract">
                <option value="" disabled selected> --- Selecciona ---</option>
                <option value="freelance"> Freelance</option>
                <option value="full-time"> Tiempo completo</option>
                <option value="half-time"> Medio tiempo</option>
                <option value="by-project"> Por proyecto</option>
            </select>
        </div>

        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label for=""> Descripcion </label>
            <input type="hidden" id="x" name="description" value="{{{ vacancy.description }}}">
            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#skillsSelected a}}
            {{/skillsSelected}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>

    </form>
</main>