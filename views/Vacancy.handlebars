<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre"> {{ vacancy.company }}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Ubicacion</p>
        <p class="nombre"> {{ vacancy.place }}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre"> {{ vacancy.contract }}</p>
    </div>
    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre">$ {{ vacancy.salary }}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripcion del puesto</h2>
        <div class="vacante-descripcion">
            {{{ vacancy.description }}}
        </div>
    </main>
    <aside class="sidebar">
        <h2>Conocimeintos deseados</h2>
        <ul class="skills">
            {{#each vacancy.skills}}
                <li>{{ this }}</li>
            {{/each}}
        </ul>
    </aside>
</div>