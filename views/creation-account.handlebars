<main class="conenedor">
    <form action="/creation-account" method="POST" class="default-form">
        <div class="campo">
            <label> Nombre </label>
            <input type="text" name="name" placeholder="Tu nombre">
        </div>
        <div class="campo">
            <label> E-mail </label>
            <input type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo">
            <label> Password </label>
            <input type="password" name="password" placeholder="Tu password">
        </div>
        <div class="campo">
            <label> Repite password </label>
            <input type="password" name="confirm" placeholder="Password">
        </div>
        <div class="campo acciones">
            <a href="/usersAccount/session-init">Volver a iniciar sesion</a>
        </div>
        <div class="campo">
            <input type="submit" value="Crear cuenta" class="btn btn-azul">
        </div>
    </form>
</main>