<main class="lista-vacantes">
    <h2>Lista de vacantes</h2>
<div class="vacante">
    {{#if vacancies.length}}
        {{#each vacancies}}
            <div class="caja">
                <h3>{{ company }}</h3>
                <p class="puesto">{{ title }}</p>
            </div>
            <div class="caja">
                <p class="etiqueta"> Ubicacion </p>
                <p class="nombre">  {{ place }}  </p>
            </div>
            <div class="caja">
                <p class="etiqueta"> Contrato </p>
                <p class="nombre contrato"> {{ contract }} </p>
            </div>
            <div class="caja centrar-vertical">
                <a href="/vacancies/{{url}}" class="btn btn-verde">Mas informacion</a>
            </div>
        </div>
        {{/each}}
    {{else}}
        <p>No existe vacante aun</p>
    {{/if}}
</main>